<div class='row mbn-30'>
  <div class='col-12 mb-30'>
    <div class='box'>
      <div class='box-head' style='display: flex; justify-content: space-between; align-items: center'>
        <h4 class='title'>ایجاد مطلب جدید</h4>
      </div>
      <div class='box-body'>
        <div class='col-lg-12'>
          <form action='/admin/posts/store' method='post' enctype='multipart/form-data'>
            <div class='row mbn-20'>
              <div class='col-12 mb-30'>
                {{#if hasError}}
                  {{#each errors}}
                    <div class='alert alert-danger' role='alert'>
                      {{this}}
                      <button class='close' data-dismiss='alert'><i class='ti-close'></i></button>
                    </div>
                  {{/each}}
                {{/if}}
              </div>
              <div class='col-12 mb-30'>
                <label class='mb-20' for='title'>عنوان مطلب :</label>
                <input name='title' type='text' id='title' class='form-control' placeholder='عنوان مطلب' />
              </div>
              <div class='col-12 mb-30'>
                <label class='mb-20' for='slug'>نامک مطلب :</label>
                <input name='slug' type='text' id='slug' class='form-control' placeholder='نامک مطلب' />
              </div>
              <div class='col-12 mb-30'>
                <label for='author_name' class='mb-20'>نام نویسنده :</label>
                <select name='author' class='form-control' id='author_name'>
                  {{#if author}}
                    <option value='{{author.id}}'>{{author.full_name}}</option>
                  {{/if}}
                  {{#if isAdmin}}
                    {{#each users}}
                      <option value='{{this.id}}'>{{this.full_name}}</option>
                    {{/each}}
                  {{/if}}
                </select>
              </div>
              <div class='col-12 mb-30'>
                <label for='thumbnail' class='mb-20'>تصویر مطلب :</label>
                <input type='file' name='thumbnail' id='thumbnail' class='form-control' />
              </div>
              <div class='col-12 mb-30'>
                <label for='content' class='mb-20'>محتوای مطلب :</label>
                <textarea id='content' name='content' class='form-control' placeholder='محتوای مطلب'></textarea>
              </div>
              <div class='col-12 mb-30'>
                <h6 class='mb-15'>وضعیت مطلب :</h6>
                <label><input type='radio' name='status' value='0' checked />پیش نویس</label>
                <label><input type='radio' name='status' value='1' />در حال بازبینی</label>
                <label><input type='radio' name='status' value='2' />منتشر شده</label>
              </div>
              <div class='col-12 col-lg-6 mb-20'>
                <input type='submit' value='ذخیره سازی' class='button button-primary' />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>