<div class='row mbn-30'>
  <div class='col-12 mb-30'>
    <div class='box'>
      <div class='box-head' style='display: flex; justify-content: space-between; align-items: center'>
        <h4 class='title'>ویرایش مطلب</h4>
      </div>
      <div class='box-body'>
        <div class='col-lg-12'>
          <form action='/admin/posts/update/{{post.id}}' method='post' enctype='multipart/form-data'>
            <div class='row mbn-20'>
              <div class='col-12 mb-30'>
                {{#if hasError}}
                  {{#each errors}}
                    <div class='alert alert-danger' role='alert'>
                      {{this}}
                    <button class='close' data-dismiss='alert'><i class='zmdi zmdi-close'></i></button>
                    </div>
                  {{/each}}
                {{/if}}
              </div>
              <div class='col-12 mb-30'>
                <input name='title' type='text' value='{{post.title}}' id='formLayoutUsername3' class='form-control' placeholder='عنوان مطلب' />
              </div>
              <div class='col-12 mb-30'>
                <input name='slug' type='text' value='{{post.slug}}' id='formLayoutUsername3' class='form-control' placeholder='نامک مطلب' />
              </div>
              <div class='col-12 mb-30'>
                <label for='author_name' class='mb-20'>نام نویسنده :</label>
                <select name='author' class='form-control' id='author_name'>
                  {{#each users}}
                    <option value='{{this.id}}' {{#isPostAuthor this.id}}selected{{/isPostAuthor}}>
                      {{this.full_name}}
                    </option>
                  {{/each}}
                </select>
              </div>
              <div class='col-12 mb-30'>
                <label for='thumbnail' class='mb-20'>تصویر شاخص :</label>
                <input type='file' name='thumbnail' value="/static/upload/thumbnails/{{post.thumbnail}}" id='thumbnail' class='form-control' />
              </div>
              <div class='col-12 mb-30'>
                <label for='content' class='mb-20'>محتوای مطلب :</label>
                <textarea name='content' id='content' class='form-control' placeholder='محتوای مطلب'>{{post.content}}</textarea>
              </div>
              <div class='col-12 mb-30'>
                <h6 class='mb-15'>وضعیت مطلب :</h6>
                <label><input type='radio' name='status' value='0' {{#isSelectedStatus postStatus.DRAFT}}checked{{/isSelectedStatus}}/>پیش نویس</label>
                <label><input type='radio' name='status' value='1' {{#isSelectedStatus postStatus.REVIEW}}checked{{/isSelectedStatus}}/>در حال بازبینی</label>
                <label><input type='radio' name='status' value='2' {{#isSelectedStatus postStatus.PUBLISHED}}checked{{/isSelectedStatus}}/>منتشر شده</label>
              </div>
              <div class='col-12 col-lg-6 mb-20'>
                <input type='submit' value='ذخیره سازی' class='button button-primary' />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>