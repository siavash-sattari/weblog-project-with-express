<div class='row mbn-30'>
  <!--Form With Basic Form Elements Start-->
  <div class='col-lg-6 col-6 mb-30'>
    <div class='box'>
      <div class='box-head'>
        <h4 class='title'>پیشنویس سریع</h4>
      </div>
      <div class='box-body'>
        <form>
          <div class='row mbn-20'>
            <div class='col-12 mb-20'>
              <input type='text' id='formLayoutUsername3' class='form-control' placeholder='عنوان مطلب' />
            </div>
            <div class='col-12 mb-20'>
              <textarea id='formLayoutMessage1' class='form-control' placeholder='محتوای مطلب'></textarea>
            </div>
            <div class='col-12 mb-20'>
              <input type='submit' value='ذخیره سازی' class='button button-primary' />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--Form With Basic Form Elements End-->

  <!-- Comments Start -->
  <div class='col-xlg-4 col-lg-6 col-12 mb-30'>
    <div class='box'>
      <div class='box-head'>
        <h4 class='title'>آخرین دیدگاه ها</h4>
      </div>
      <div class='box-body'>
        <div class='table-responsive'>
          <table class='table daily-sale-report'>
            <!-- Table Head Start -->
            <thead>
              <tr>
                {{#if areThereAnyComments}}
                  <th>کاربر</th>
                  <th>دیدگاه</th>
                {{/if}}
              </tr>
            </thead>
            <!-- Table Head End -->

            <!-- Table Body Start -->
            <tbody>
              {{#if areThereAnyComments}}
                {{#each latestComments}}
                  <tr>
                    <td class='fw-600'>{{this.user_name}}</td>
                    <td>
                      <p>{{this.comment}}</p>
                    </td>
                  </tr>
                {{/each}}
              {{/if}}

              {{#unless areThereAnyComments}}
                <p>در حال حاضر هیچ پیامی برای نمایش وجود ندارد</p>
              {{/unless}}

            </tbody>

            <!-- Table Body End -->
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- Comments End -->
</div>