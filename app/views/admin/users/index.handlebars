<div class='row mbn-30'>
  <div class='col-12 mb-30'>
    {{#if success}}
      <div class='alert alert-success alert-dismissible fade show' role='alert'>
        {{success}}
        <button class='close' data-dismiss='alert'><i class='ti-close'></i></button>
      </div>
    {{/if}}
    <div class='box'>
      <div class='box-head'>
        <h4 class='title'>لیست کاربران</h4>
        <button class='button button-primary'><a href='/admin/users/create'>ایجاد کاربر جدید</a></button>
      </div>
      <div class='box-body'>
        <div class='table-responsive'>
          <table class='table table-vertical-middle'>
            <thead class='thead-dark'>
              <tr>
                <th>#</th>
                <th>تصویر</th>
                <th>نام</th>
                <th>ایمیل</th>
                <th>نقش کاربری</th>
                <th>تاریخ ثبت نام</th>
                <th>عملیات</th>
              </tr>
            </thead>
            <tbody>
              {{#each users}}
                <tr>
                  <td>{{inc @index}}</td>
                  <td>
                    <div class='user'>
                      <span class='avatar'>
                        <img src='/static/upload/avatars/{{this.user_avatar}}' alt='' />
                      </span>
                    </div>
                  </td>
                  <td>{{this.full_name}}</td>
                  <td>{{this.email}}</td>
                  <td><span class='{{badgeBackground this.role}}'>{{userRole this.role}}</span></td>
                  <td>{{this.created_at}}</td>
                  <td>
                    <a href='/admin/users/edit/{{this.id}}' style='font-size: 17px; cursor: pointer; margin-right: 15px'><i class='ti-pencil'></i></a>
                    <a
                      href='/admin/users/delete/{{this.id}}'
                      class='{{hideTrashIcon this.role}}'
                      style='font-size: 17px; cursor: pointer; margin-right: 15px'
                    ><i class='ti-trash'></i></a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>