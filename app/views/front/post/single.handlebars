{{>header}}

<section class='section-gap pb-0'>
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-md-12'>
        <section class='section-gap px-lg-5'>
          <div
            class='hero-img bg-overlay rounded overflow-hidden'
            data-overlay='2'
            style='background-image: url(/static/assets/img/blog/b1.jpg);'
          ></div>
          <div class='container'>
            <div class='row align-items-center text-white'>
              <div class='col-md-8'>
                <h3>{{post.title}}</h3>
                <div class='meta font-lora my-4 text-white'>
                  <a href='#'>مسافرت</a>
                  <span class='meta-separator'></span>
                  <a href='#'>1398 فروردین</a>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</section>

<section class='section-gap pb-0'>
  <div class='container'>
    <div class='row justify-content-center'>
      <div class='blog-post border-0 blog-single'>
        {{post.content}}
      </div>
    </div>
  </div>
</section>

